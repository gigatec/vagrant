#!/usr/bin/env bash

FORCE="0"
if [ "$1" = "--force" ]; then
	FORCE="1"
fi

# Import DB dump
cd /vagrant/private/
for dump in current*.sql.gz; do
	db="$(echo $dump | sed -n 's/current-\(.*\).sql.gz/\1/gp')"
	db="${db:-wordpress}"
	
	# Create database and import if not exists
	if echo 'CREATE DATABASE '$db';' | mysql -u root 2> /dev/null || [ "$FORCE" = "1" ]; then
		
		echo 'Import DB dump: '$db'...'
			
		# Import
		zcat $dump | mysql -u root $db

		cd /vagrant/public
		OPTIONS_TABLE=$(wp db tables | grep _options)
		SITEURL=$(echo 'select option_value from '$OPTIONS_TABLE' where option_name="siteurl"' | wp db query | tail -n 1)
		if [ "$SITEURL" ]; then
			wp search-replace "${SITEURL%/}" "http://localhost:8080"
		fi

	fi
done
